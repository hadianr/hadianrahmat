---
import { IHeroProps } from "@types";

const { name, about } = Astro.props as IHeroProps;

// Helper function to convert markdown bold to HTML and handle line breaks
const formatText = (text: string) => {
  return text
    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
    .split('\n')
    .filter((line: string) => line.trim() !== '')
    .map((line: string) => `<p>${line}</p>`)
    .join('');
};
---

<section>
  <p class="mt-[32px]">Hey, I'm</p>
  <h1>{name}</h1>
  <div class="text-lg mb-16 space-y-4 about-content">
    <Fragment set:html={formatText(about)} />
  </div>
  <!-- CTA to CV page -->
  <div class="flex flex-col sm:flex-row items-start sm:items-center gap-3 sm:gap-4 mb-20">
    <a href="/cv" class="cta-primary" aria-label="View my ATS-friendly CV">
      <svg width="18" height="18" viewBox="0 0 24 24" class="icon" aria-hidden="true">
        <path d="M17 8l4 4-4 4M3 12h18" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
      <span>View ATS CV</span>
      <span class="badge">ATS-ready</span>
    </a>
    <a href="#experience" class="cta-secondary">Learn more about my experience</a>
  </div>
</section>

<style>
  .about-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.6;
    color: inherit;
  }
  
  .about-content :global(strong) {
    font-weight: 600;
    color: inherit;
  }

  /* CTA styles - Optimized for performance */
  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.9rem 1.2rem;
    border-radius: 0.75rem;
    font-weight: 600;
    background: linear-gradient(90deg, #2563eb, #7c3aed);
    color: #ffffff;
    box-shadow: 0 10px 20px rgba(60, 64, 67, 0.3);
    transform: translateY(0);
    transition: transform 0.15s ease, box-shadow 0.2s ease, opacity 0.2s ease;
    will-change: transform;
    contain: layout style paint;
  }

  .cta-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(60, 64, 67, 0.35);
    opacity: 0.98;
  }

  .cta-primary .icon {
    stroke: currentColor;
    fill: none;
  }

  .cta-primary .badge {
    margin-left: 0.4rem;
    background: rgba(255,255,255,0.18);
    color: #fff;
    font-size: 0.75rem;
    padding: 0.15rem 0.45rem;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,0.35);
  }

  .cta-secondary {
    color: var(--text-secondary, #64748b);
    font-weight: 500;
    text-decoration: none;
    position: relative;
  }

  .cta-secondary::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0%;
    height: 2px;
    background: currentColor;
    transition: width 0.2s ease;
  }

  .cta-secondary:hover::after {
    width: 100%;
  }

  :global(.dark) .cta-secondary {
    color: #cbd5e1;
  }

  /* Smooth scroll for anchor links */
  :global(html) {
    scroll-behavior: smooth;
  }
</style>
