---
import { info } from "@data";
import { createLogo } from "@utils";

const isCvPage = Astro.url.pathname.startsWith("/cv");
---

<header
  class="container flex items-center justify-between h-[80px] sm:h-[123px]"
>
  <a
    class="text-2xl font-semibold dark:font-semibold font-outfit"
    href="/"
    >{createLogo(info.name)}.
  </a>
  <nav>
    <ul class="flex items-center">
      {!isCvPage && (
        <li>
          <a class="p-4 block text-lg" href="/cv?download=1" title="Download CV as PDF" aria-label="Download my CV as PDF">
            Download CV
          </a>
        </li>
      )}
      <!-- <li>
        <a class="p-4 block text-lg" href="/contact">Contact</a>
      </li> -->
      <li>
        <button
          aria-label="theme-button"
          id="theme-button"
          class="rounded-lg p-4 ml-2 bg-slate-100 dark:bg-[#202020]"
        ></button>
      </li>
    </ul>
  </nav>
</header>

<script>
  // Theme toggle with error handling
  const moon = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>';
  const sun = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>';
  
  function initTheme() {
    try {
      const themeBtn = document.getElementById('theme-button');
      const themeColor = document.querySelector('[name="theme-color"]');
      if (!themeBtn) return;
      
      let isDark;
      let theme = 'light';
      
      try {
        theme = localStorage.getItem('theme') || 'light';
      } catch (e) {
        theme = 'light';
      }
      
      if (theme === 'light') {
        isDark = true;
        themeBtn.innerHTML = moon;
        if (themeColor) themeColor.content = '#FFFFFF';
      } else {
        isDark = false;
        themeBtn.innerHTML = sun;
        if (themeColor) themeColor.content = '#111111';
      }
      
      themeBtn.addEventListener('click', function() {
        try {
          if (isDark) {
            document.documentElement.setAttribute('data-theme', 'dark');
            localStorage.setItem('theme', 'dark');
            isDark = false;
            themeBtn.innerHTML = sun;
            if (themeColor) themeColor.content = '#111111';
          } else {
            document.documentElement.setAttribute('data-theme', 'light');
            localStorage.setItem('theme', 'light');
            isDark = true;
            themeBtn.innerHTML = moon;
            if (themeColor) themeColor.content = '#FFFFFF';
          }
        } catch (e) {
          // Silent fail
        }
      });
    } catch (e) {
      // Silent fail
    }
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTheme);
  } else {
    initTheme();
  }
</script>
