---
import Footer from "@components/general/Footer.astro";
import Navbar from "@components/general/Navbar.astro";
import "../styles/style.css";
---

<!-- Critical inline script: set color scheme before rendering -->
<script is:inline>
  document.documentElement.style.colorScheme = 'light dark';
</script>

<!-- Async stylesheet loading -->
<script is:inline>
  const link = document.querySelector('link[rel="stylesheet"]');
  if (link && link.href.includes('/assets/')) {
    link.media = 'print';
    link.onload = function() { this.media = 'all'; };
  }
</script>

<Navbar />
<main class="container">
  <slot />
</main>
<Footer />
